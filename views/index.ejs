        <section
            id="carouselExampleControls"
            class="carousel slide"
            data-bs-ride="carousel"
        >
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img
                        src="/images/brands/play5.png"
                        class="d-block w-100"
                        alt="banner playstation 5"
                    />
