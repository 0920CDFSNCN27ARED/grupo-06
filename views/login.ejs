<%- include("partials/head") %>

<body>
    <%- include("partials/header") %>
    <div class="display_flex flex_column content_login container">
        <h1 class="text_center margin_10">Ingresar</h1>
        <button class="button_small background_primary">
            <i class="fab fa-google"></i> INGRESAR CON GOOGLE
        </button>
        <button class="button_small background_primary">
            <i class="fab fa-facebook"></i> INGRESAR CON FACEBOOK
        </button>
        <div class="login">
            <form action="/" method="POST" class="mt-14">
                <label for="email">E-mail:</label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="mail@gmail.com"
                />
                <label for="password">Contraseña:</label>
                <input
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Elegí tu contraseña"
                />
                <button
                    class="button_large background_primary"
                    type="submit"
                    value="INGRESAR"
                >
                    INGRESAR
                </button>
            </form>
        </div>
        <div class="text_center margin_10">
            <a class="color_primary" href="#"
                >No estas registrado? Registrate acá</a
            >
        </div>
    </div>
    <%- include("partials/footer") %>
</body>
