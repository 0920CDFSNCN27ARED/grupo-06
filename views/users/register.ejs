<%- include("../partials/head") %>

    <body class="d-flex flex-column min-vh-100">
        <%- include("../partials/header") %>
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <h1 class="text-center my-3">Registrate</h1>
